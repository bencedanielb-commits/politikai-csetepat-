<body>

    <h1>Főmenü</h1>

    <div id="menu">
        <button onclick="startGame()">Játék indítása</button>
        <button onclick="openSettings()">Beállítások</button>
        <button onclick="openCredits()">Készítők</button>
    </div>

    <!-- Beállítások -->
    <div id="settingsMenu">
        <h2>Beállítások</h2>
        <button onclick="openControls()">Irányítás</button>
        <button onclick="openAudio()">Hang</button>
        <button onclick="openBrightness()">Fényerő</button>
        <br><br>
        <button onclick="goBack()">Vissza</button>
    </div>

    <!-- Irányítás -->
    <div id="controlMenu">
        <h2>Irányítás</h2>
        <p>Itt fognak lenni az irányítási beállítások.</p>
        <button onclick="goBackSettings()">Vissza</button>
    </div>

    <!-- Hang -->
    <div id="audioMenu">
        <h2>Hang beállítások</h2>
        <p>Hangszint szabályozása (majd később).</p>
        <button onclick="goBackSettings()">Vissza</button>
    </div>

    <!-- Fényerő -->
    <div id="brightnessMenu">
        <h2>Fényerő</h2>
        <p>Itt lehet majd állítani a fényerőt.</p>
        <button onclick="goBackSettings()">Vissza</button>
    </div>

    <!-- Készítők -->
    <div id="creditsMenu">
        <h2>Készítők</h2>
        <p>A játékot készítette:</p>
        <h3>Balogh Bence Dániel (alias Bali)</h3>
        <p>Készítve GitHub-ban</p>
        <br>
        <button onclick="goBack()">Vissza</button>
    </div>

    <script src="main.js"></script>
